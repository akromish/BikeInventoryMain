{
  "name": "bikeinventory",
  "version": "1.0.0",
  "description": "Bike CRUD app using MERN stack",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuildish": "cd client && npm install && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "start": "nodemon server",
    "client": "cd client && npm start",
    "dev": "concurrently \"nodemon server.js\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akromish/BikeInventory.git"
  },
  "author": "akromish",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/akromish/BikeInventory/issues"
  },
  "homepage": "https://github.com/akromish/BikeInventory#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.10.0",
    "morgan": "^1.10.0"
  }
}
